# Backend environment example
PORT=5000
MONGO_URI=mongodb+srv://<user>:<pass>@<cluster>/<db>?retryWrites=true&w=majority
JWT_SECRET=replace-with-a-strong-secret

# Email (Gmail recommended with App Password)
EMAIL_SERVICE=gmail
EMAIL_USER=your@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=CodeStash <your@gmail.com>
# Or custom SMTP
# EMAIL_HOST=smtp.yourhost.com
# EMAIL_PORT=587

# Development fallback to surface OTP in API when email fails (use only in dev)
DEV_EMAIL_FALLBACK=true

# CORS (optional)
# CORS_ORIGIN=https://your-frontend.example.com
